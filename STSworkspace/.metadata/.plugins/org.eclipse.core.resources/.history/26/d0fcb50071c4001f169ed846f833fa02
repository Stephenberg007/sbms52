	<input type="hidden" th:field="*{uid}" />
	<table>
		<tr>
			<td>Name :</td>
			<td><input type="text" th:field="*{name}" required/></td>
			

			<td><p th:if ="${#fields.hasErrors('name')}" th:errorclass="error" th:errors="*{name}" /></td>
		</tr>
		<tr>
			<td>Email:</td>
			<td><input type="email" th:field="*{email}"/></td>
			<td><p th:if ="${#fields.hasErrors('email')}" th:errorclass="error" th:errors="*{email}" /></td>
		</tr>
		<tr>
			<td>Phone:</td>
			<td><input type="number" th:field="*{phone}"/></td>
			<td><p th:if ="${#fields.hasErrors('phone')}" th:errorclass="error" th:errors="*{phone}" /></td>
		</tr>
				<tr>
					<td></td>
					<td><input type="submit" value="save" class="btn btn-primary"/></td>
				</tr>
